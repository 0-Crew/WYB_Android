<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="5dp"
    android:insetTop="5dp"
    android:insetBottom="5dp">
    <selector>
        <item android:state_checked="true">
            <shape>
                <solid android:color="@color/blue_cal" />
                <corners
                    android:bottomLeftRadius="30dp"
                    android:topLeftRadius="30dp" />
            </shape>
        </item>
        <item>
            <layer-list>
                <item>
                    <shape>
                        <stroke
                            android:width="1dp"
                            android:color="@color/blue_cal" />
                        <corners
                            android:bottomLeftRadius="30dp"
                            android:topLeftRadius="30dp" />
                    </shape>
                </item>
                <item
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="-1dp"
                    android:top="1dp">
                    <shape>
                        <solid android:color="@color/dark_gray_2" />
                        <corners
                            android:bottomLeftRadius="30dp"
                            android:topLeftRadius="30dp" />
                    </shape>
                </item>
            </layer-list>
        </item>
    </selector>
</inset>