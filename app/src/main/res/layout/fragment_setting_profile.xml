<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layoutTitle"
            layout="@layout/include_nav_title_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleString="@{@string/setting_profile}" />

        <include
            android:id="@+id/layoutProfileExposure"
            layout="@layout/include_setting_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:menuString="@{@string/setting_profile_exposure}" />

        <include
            android:id="@+id/layoutProfileManagement"
            layout="@layout/include_setting_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menuString="@{@string/setting_profile_management}" />
    </LinearLayout>
</layout>